<!DOCTYPE html>
<html>
<head>
  <title>Forum</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% flash.each do |type, message| %>
    <div class="flash"><%= message %></div>
  <% end %>

  <div><%= t('hello') %> <%= current_user.username %>
    <% if signed_in? %>
      <%= link_to t('profile'), current_user %>
    <% else %>
      <%= link_to 'Sign in', sign_in_path %>
      or <%= link_to 'Sign up', sign_up_path %>
    <% end %>
  </div>

  <%= link_to t(:log_out), sign_out_path, method: :delete if signed_in? %>
  <%= link_to image_tag('france_flag.png'), '/fr', title: 'FranÃ§ais' %>
  <%= link_to image_tag('uk_flag.png'), '/en', title: 'English' %>

<%= yield %>

  <% if signed_in? %>
    <div id="posts" >
    </div>
  <% end %>

  <script>Forum.pollInterval = <%= ENV['POLL_INTERVAL_IN_MS'] %></script>

</body>
</html>
